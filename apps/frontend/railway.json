{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile",
    "watchPatterns": [
      "**/*.ts",
      "**/*.tsx", 
      "**/*.js",
      "**/*.jsx",
      "**/*.json",
      "package.json",
      "package-lock.json",
      "next.config.js",
      "tailwind.config.ts",
      "tsconfig.json"
    ]
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "startCommand": "npm start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300
  },
  "environments": {
    "NODE_ENV": "production",
    "PORT": "3000"
  }
}