# Backend Environment Variables
# Copy to .env and fill in your actual values

# ========================================
# API Keys & External Services
# ========================================
PERPLEXITY_API_KEY=your_perplexity_api_key_here
OPEN_EXCHANGE_API_KEY=your_open_exchange_api_key_here

# ========================================
# Application Configuration
# ========================================
PERPLEXITY_MODEL=sonar-deep-research
PERPLEXITY_FALLBACK_MODEL=sonar
PERPLEXITY_TEMPERATURE=0.2
PERPLEXITY_TOP_P=1

# Exchange rate update frequency (hours)
EXCHANGE_UPDATE_INTERVAL_HOURS=24

# ========================================
# Security
# ========================================
SECRET_KEY=your_secret_key_for_jwt_and_sessions

# ========================================
# Environment
# ========================================
ENVIRONMENT=development
DEBUG=true

# ========================================
# CORS Origins
# ========================================
# For development: allow localhost
ALLOWED_ORIGINS=http://localhost:3000

# For production: use your actual frontend URL
# ALLOWED_ORIGINS=https://your-frontend-service.railway.app

# ========================================
# Railway Deployment (set by Railway)
# ========================================
# PORT=5001
# RAILWAY_VOLUME_MOUNT_PATH=/app/data 